<div class="container" id="task">
  <div class="banner">
    <h1>My Tasks</h1>
  </div>

  <div class="list">
    <% @tasks.each do |task| %>
        <li>
        <% if task.completed %>
          <i class="far fa-check-square" ></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to(task_path(task), method: :delete) do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        </li>
    <% end %>
  </div>
  <div id="link">
    <%= link_to(tasks_new_path()) do %>
    <i class="fas fa-plus">Add new task!</i>
    <% end %>
  </div>
  </div>
